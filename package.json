{
  "name": "moss-monitor",
  "version": "0.0.2",
  "description": "前端监控本地数据采集SDK",
  "author": "craber-dev",
  "license": "ISC",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "start",
